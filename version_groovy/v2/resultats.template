<html>
<head>
</head>
<body>

	<div>
		<h1>Classement général</h1>
		<ol>
			<% players.sort { a,b -> b.total <=> a.total }.each { out.print "<li>" + it.name + " : " + it.getTotal() + "</li>"} %>
		</ol>
	</div>
	<div>
		<h1>Points du jour</h1>
		<ul>
			<% players.each { out.print "<li>" + it.name + " : " + it.proposals.last().points + "</li>"} %>
		</ul>
	</div>

	<div>
		<h1>Détail par joueur<h1>
		<% players.each { %>
		<h2>$it.name</h2>
		<table style="border-collapse: collapse; border: 1px solid black; padding: 1em;">
			<% it.proposals.each { proposal ->  
				def output = "<tr><td style=\"border: 1px solid black; padding: 1em;\">Jour $proposal.day, total : ${proposal.points}</td>"
				proposal.words.sort { a,b -> b.points <=> a.points } .each { word ->
					output += "<td style=\"border: 1px solid black; padding: 1em;\">$word.value:$word.points</td>"
				}
				output += "</tr>"
				out.print output
			} %>
		</table>
		<% } %>
	</div>	

	<h1>Liste des mots pour chaque jour</h1>
	<table style="border-collapse: collapse; border: 1px solid black; padding: 1em;">
		<tbody>
		<% wordsPerDay.each { %>
			<tr>
				<td style="border: 1px solid black; padding: 1em;">Jour $it.key</td>
				<td style="border: 1px solid black; padding: 1em;"><% it.value.sort { a,b -> b.points <=> a.points }.each { word -> out.print word.value + ":" + word.points + " / "} %></td>
			</tr>
		<% } %>
		</tbody>
	</table>
</body>
</html>